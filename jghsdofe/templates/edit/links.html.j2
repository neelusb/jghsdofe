{% extends 'layout.html.j2' %}
{% block content %}
  {% set days_of_week = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'] %}
  <div class="row">
    <div class="col-sm-2 col-md-2"><a href="{{ url_for('view.summary', level=level) }}" class="btn btn-primary"><h4>&larr; Back</h4></a></div>
    <div class="col-sm-8 col-md-8">
      <h1 class="text-center">Links and Documents</h1>
    </div>
    <div class="col-sm-2 col-md-2"></div>
  </div>

  <div class="row mb-4">
    <div class="col-xs-12 col-md-6">
      <a href="{{ url_for('edit.new_section', level=level) }}" class="btn btn-primary" style="width: 100%;">New Section</a>
    </div>
    <br class="small-screen">
    <br class="small-screen">
    <div class="col-xs-12 col-md-6">
      <a href="{{ url_for('edit.order_sections', level=level) }}" class="btn btn-primary" style="width: 100%;">Change Order</a>
    </div>

  </div>

  {% if sections|length == 0 %}
    <div class="text-center content-section">
      No links or documents.
    </div>
  {% endif %}
  <div class="one-in-a-row row">
    <div class="c col-xs-12">
      {% for section in sections %}
        {% set links = links_sorted[section.id] %}
        <div class="container section">
          <div class="content-section">
            <h3>{{ section.title }}</h3>
            {% if section.description %}
              <p>{{ section.description }}</p>
            {% endif %}
            <ul>
              {% for link in links %}
                <li><a target="_blank" href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
            <a href="{{ url_for('edit.edit_section', level=level, id=section.id) }}" class="btn btn-primary">Edit</a>
            <a href="{{ url_for('edit.delete_section', level=level, id=section.id) }}" class="btn btn-primary">Delete</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="two-in-a-row row">
    <div class="c col-xs-6">
      {% for section in sections %}
        {% if loop.index % 2 == 1 %}
          {% set links = links_sorted[section.id] %}
          <div class="container section">
            <div class="content-section">
              <h3>{{ section.title }}</h3>
              {% if section.description %}
                <p>{{ section.description }}</p>
              {% endif %}
              <ul>
                {% for link in links %}
                  <li><a target="_blank" href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
              <a href="{{ url_for('edit.edit_section', level=level, id=section.id) }}" class="btn btn-primary">Edit</a>
              <a href="{{ url_for('edit.delete_section', level=level, id=section.id) }}" class="btn btn-primary">Delete</a>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="c col-xs-6">
      {% for section in sections %}
        {% if loop.index % 2 == 0 %}
          {% set links = links_sorted[section.id] %}
          <div class="container section">
            <div class="content-section">
              <h3>{{ section.title }}</h3>
              {% if section.description %}
                <p>{{ section.description }}</p>
              {% endif %}
              <ul>
                {% for link in links %}
                  <li><a target="_blank" href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
              <a href="{{ url_for('edit.edit_section', level=level, id=section.id) }}" class="btn btn-primary">Edit</a>
              <a href="{{ url_for('edit.delete_section', level=level, id=section.id) }}" class="btn btn-primary">Delete</a>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="three-in-a-row row">
    <div class="c col-xs-4">
      {% for section in sections %}
        {% if loop.index % 3 == 1 %}
          {% set links = links_sorted[section.id] %}
          <div class="container section">
            <div class="content-section">
              <h3>{{ section.title }}</h3>
              {% if section.description %}
                <p>{{ section.description }}</p>
              {% endif %}
              <ul>
                {% for link in links %}
                  <li><a target="_blank" href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
              <a href="{{ url_for('edit.edit_section', level=level, id=section.id) }}" class="btn btn-primary">Edit</a>
              <a href="{{ url_for('edit.delete_section', level=level, id=section.id) }}" class="btn btn-primary">Delete</a>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="c col-xs-4">
      {% for section in sections %}
        {% if loop.index % 3 == 2 %}
          {% set links = links_sorted[section.id] %}
          <div class="container section">
            <div class="content-section">
              <h3>{{ section.title }}</h3>
              {% if section.description %}
                <p>{{ section.description }}</p>
              {% endif %}
              <ul>
                {% for link in links %}
                  <li><a target="_blank" href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
              <a href="{{ url_for('edit.edit_section', level=level, id=section.id) }}" class="btn btn-primary">Edit</a>
              <a href="{{ url_for('edit.delete_section', level=level, id=section.id) }}" class="btn btn-primary">Delete</a>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="c col-xs-4">
      {% for section in sections %}
        {% if loop.index % 3 == 0 %}
          {% set links = links_sorted[section.id] %}
          <div class="container section">
            <div class="content-section">
              <h3>{{ section.title }}</h3>
              {% if section.description %}
                <p>{{ section.description }}</p>
              {% endif %}
              <ul>
                {% for link in links %}
                  <li><a target="_blank" href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
              <a href="{{ url_for('edit.edit_section', level=level, id=section.id) }}" class="btn btn-primary">Edit</a>
              <a href="{{ url_for('edit.delete_section', level=level, id=section.id) }}" class="btn btn-primary">Delete</a>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

{% endblock content %}

{% block head %}
  <style>
    .c {
      margin: 0 !important;
      padding: 0 !important;
      display: inline-block;
      vertical-align: top;
    }

    .two-in-a-row, .three-in-a-row {
      display: none;
    }

    .section {
      display: block;
      width: 100%;
      margin: 0 !important;
    }

    @media (min-width: 576px) {
      .one-in-a-row {
        display: none;
      }
      .two-in-a-row {
        display: block;
      }
      .three-in-a-row {
        display: none;
      }
    }

    @media (min-width: 768px) {
      .one-in-a-row {
        display: none;
      }
      .two-in-a-row {
        display: none;
      }
      .three-in-a-row {
        display: block;
      }
    }

  </style>

{% endblock head %}
